<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg21">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contents"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="35dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageButton37"
        android:background="@android:drawable/ic_dialog_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView14"
        android:layout_below="@+id/imageButton37"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton38"
        android:layout_below="@+id/imageView4"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:background="@drawable/notes"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton39"
        android:background="@drawable/mcq1"
        android:layout_alignTop="@+id/imageButton38"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignBottom="@+id/imageButton38"
        android:layout_toStartOf="@id/imageButton39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="QuickGlance"
        android:id="@+id/textView21"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="25dp"
        android:layout_below="@+id/imageButton38"
        android:layout_toLeftOf="@+id/imageButton42"
        android:layout_toStartOf="@+id/imageButton42"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MCQ"
        android:id="@+id/textView22"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="25dp"
        android:layout_above="@+id/imageButton40"
        android:layout_toRightOf="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton40"
        android:background="@drawable/paper1"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/imageButton38"
        android:layout_alignStart="@+id/imageButton38" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton41"
        android:background="@drawable/formula1"
        android:layout_alignTop="@+id/imageButton40"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="QuestionPaper"
        android:id="@+id/textView23"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/imageButton40"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="15dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Formulae"
        android:id="@+id/textView24"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="25dp"
        android:layout_above="@+id/imageButton42"
        android:layout_alignLeft="@+id/imageView14"
        android:layout_alignStart="@+id/imageView14" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton42"
        android:background="@drawable/faq"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FAQ"
        android:id="@+id/textView25"
        android:layout_below="@+id/imageButton42"
        android:layout_alignRight="@+id/imageButton42"
        android:layout_alignEnd="@+id/imageButton42"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignLeft="@+id/imageButton42"
        android:layout_alignStart="@+id/imageButton42"
        android:textSize="25dp" />


</RelativeLayout>
    </ScrollView>