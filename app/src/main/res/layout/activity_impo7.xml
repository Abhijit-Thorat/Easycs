<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.horizon.abhijit.simphycs.Impo7"
    android:background="@drawable/bg12">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- Important Questions --"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif"
        android:id="@+id/textViewa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1)	Explain classification of solids in conductors, semiconductors and insulators on the basis of energy band theory.\n\n 2)	What is Fermi energy level? \n\n 3)	Derive expression for conductivity in intrinsic and extrinsic semiconductors. \n\n 4)	Derive an expression for conductivity in semiconductors. \n\n 5)	Explain the working of P-N junction diode on the basis of Fermi energy levels in forward bias method. \n\n 6)	Explain Hall Effect in semiconductors. Derive equation of Hall voltage and Hall coefficient. \n\n   "
        android:id="@+id/textView9"
        android:typeface="sans"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />
</RelativeLayout>
