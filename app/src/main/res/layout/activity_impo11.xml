<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll20"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg12">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.horizon.abhijit.simphycs.Impo11">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- Important Questions --"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif"
        android:id="@+id/textViewa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1)	Explain any tow properties of nanomaterial.\n\n 2)	Explain Optical and Electrical properties of nanomaterial. \n\n 3)	State any four methods of synthesis of nanoparticles and describe any one method. \n\n 4)	Explain the synthesis of Gold nanoparticles by colloidal route method. \n\n 5)	Explain briefly how colloids are synthesized by a chemical route method. \n\n 6)	Discuss any one application of nanotechnology in brief. \n\n 7)	Explain applications of nanotechnology in field of electronics. \n\n 8)	Explain applications of nanotechnology in field of medicine. \n\n 9)	Discuss the structural properties of nanomaterial. \n\n  "
        android:id="@+id/textView13"
        android:typeface="sans"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>