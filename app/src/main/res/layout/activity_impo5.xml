<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.horizon.abhijit.simphycs.Impo5"
    android:background="@drawable/bg12">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- Important Questions --"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif"
        android:id="@+id/textViewa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1)	Define plane of polarization and plane of vibration.\n\n 2)	Distinguish between polarized and unpolarized light. \n\n 3)	Which are different methods of production of plane polarized light? \n\n 4)	Explain the term-“Pile of plates”. \n\n 5)	Sate Brewster’s law. \n\n 6)	State and explain law of Malus. \n\n "
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:typeface="sans"
        android:textSize="15dp"
        android:layout_below="@+id/textViewa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

</RelativeLayout>
